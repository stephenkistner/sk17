<% wrap_layout :default do %>


<div class="intro-bg" style="background-image: url('<%=current_page.url %>hero.jpg')">
  <section class="intro">
    <div class="casing" style="color: #<%=current_page.data.theme_color %>">
      <h2><%=current_page.data.head1 %></h2>
      <h1><%=current_page.data.head2 %></h1>
    </div>
  </section>
</div>


<section class="brief">
  <p class="emph"><%=current_page.data.summary %></p>
    <div class="role">
      <h6>My Role:</h6>
      <small><%=current_page.data.role %></small>
    </div>
    <div class="summary">
      <div class="list1">
      <h6>Along the way I:</h6>
        <ul>
          <% current_page.data.contents.each do |f| %>
          <li><%= f %></li>
          <% end %>
        </ul>
      </div>
      <div class="list2">
      <h6>And I learned:</h6>
        <ul>
          <% current_page.data.learned.each do |f| %>
          <li><%= f %></li>
          <% end %>
        </ul>
      </div>
    </div>
</section>


<div class="content">
<%= yield %>
</div>

<% end %>
